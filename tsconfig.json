/* Visit https://aka.ms/tsconfig to read more about this file */
{
    "extends": ["@tsconfig/strictest/tsconfig.json"],
    "compilerOptions": {
        /* Language and Environment */

        // async generators and for-await-of loops have been available since:
        "target": "ES2018",
        "lib": ["ES2018"],
        "types": ["vitest/globals"],

        /* Modules */
        "module": "NodeNext",
        "moduleResolution": "NodeNext",

        /* Emit */
        "noEmit": true
    },
    "include": ["src", "./*.config.ts", "./*.config.js", ".husky/install.mjs"]
}
